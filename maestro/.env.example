# =============================================================================
# UBIK Maestro - Configuration Template
# =============================================================================
# Copy this file to .env and fill in your values.
# Lines starting with '#' are comments.
# Variables marked "(required)" have NO default — Maestro will refuse to start
# without them.
# =============================================================================

# -----------------------------------------------------------------------------
# UBIK Project Root
# -----------------------------------------------------------------------------
# Auto-detected at runtime:
#   macOS  → /Volumes/990PRO 4T/UBIK
#   Linux  → /home/gasu/ubik
# Override only if your layout differs.
# UBIK_ROOT=/Volumes/990PRO 4T/UBIK

# -----------------------------------------------------------------------------
# Maestro Orchestrator
# -----------------------------------------------------------------------------
# default: {UBIK_ROOT}/logs/maestro/
MAESTRO_LOG_DIR=
MAESTRO_CHECK_INTERVAL_S=300            # health-check loop interval (seconds)
MAESTRO_LOG_LEVEL=INFO                  # DEBUG | INFO | WARNING | ERROR | CRITICAL

# -----------------------------------------------------------------------------
# Hippocampal Node — Mac Mini M4 Pro (macOS)
# -----------------------------------------------------------------------------
HIPPOCAMPAL_TAILSCALE_IP=100.103.242.91
HIPPOCAMPAL_TAILSCALE_HOSTNAME=ubik-hippocampal

# -----------------------------------------------------------------------------
# Somatic Node — PowerSpec RTX 5090 (WSL2 Linux)
# -----------------------------------------------------------------------------
SOMATIC_TAILSCALE_IP=100.79.166.114
SOMATIC_TAILSCALE_HOSTNAME=ubik-somatic

# -----------------------------------------------------------------------------
# Neo4j Graph Database  (runs on Hippocampal Node)
# -----------------------------------------------------------------------------
NEO4J_HTTP_PORT=7474
NEO4J_BOLT_PORT=7687
NEO4J_USER=neo4j
# (required) — set this to your Neo4j password
NEO4J_PASSWORD=

# -----------------------------------------------------------------------------
# ChromaDB Vector Store  (runs on Hippocampal Node)
# -----------------------------------------------------------------------------
CHROMADB_PORT=8001
# (required) — set this to your ChromaDB bearer token
CHROMADB_TOKEN=

# -----------------------------------------------------------------------------
# MCP Server  (runs on Hippocampal Node)
# -----------------------------------------------------------------------------
MCP_PORT=8080

# -----------------------------------------------------------------------------
# vLLM Inference Server  (runs on Somatic Node)
# -----------------------------------------------------------------------------
VLLM_PORT=8002
VLLM_MODEL_PATH=/home/gasu/ubik/models/deepseek-awq/DeepSeek-R1-Distill-Qwen-14B-AWQ
VLLM_VENV_PATH=/home/gasu/pytorch_env
