# =============================================================================
# Ubik Hippocampal Node - Configuration Template
# =============================================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
#
# IMPORTANT: Never commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Neo4j Graph Database
# -----------------------------------------------------------------------------
# Connection URI for Neo4j (bolt protocol)
NEO4J_URI=bolt://localhost:7687

# Neo4j authentication
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_secure_password_here

# -----------------------------------------------------------------------------
# ChromaDB Vector Database
# -----------------------------------------------------------------------------
# ChromaDB server connection
CHROMADB_HOST=localhost
CHROMADB_PORT=8001

# ChromaDB authentication token
CHROMADB_TOKEN=your_chromadb_token_here

# -----------------------------------------------------------------------------
# MCP Server Configuration
# -----------------------------------------------------------------------------
# Host and port for the MCP server
MCP_HOST=0.0.0.0
MCP_PORT=8080

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Optional: Log directory (defaults to ./logs)
# LOG_DIR=./logs

# -----------------------------------------------------------------------------
# Connection Pooling (Optional)
# -----------------------------------------------------------------------------
# Neo4j connection pool settings
# Maximum connections in the pool
# NEO4J_MAX_CONNECTION_POOL_SIZE=50

# Time to wait for an available connection (seconds)
# NEO4J_CONNECTION_ACQUISITION_TIMEOUT=60

# Maximum lifetime of a pooled connection before recycling (seconds)
# NEO4J_MAX_CONNECTION_LIFETIME=3600

# ChromaDB request timeout (seconds)
# CHROMADB_TIMEOUT=30

# -----------------------------------------------------------------------------
# Resilience Settings (Optional)
# -----------------------------------------------------------------------------
# Maximum retry attempts for external services
# MAX_RETRIES=3

# Base delay for exponential backoff (seconds)
# RETRY_BASE_DELAY=1.0

# Circuit breaker failure threshold
# CIRCUIT_BREAKER_THRESHOLD=5
